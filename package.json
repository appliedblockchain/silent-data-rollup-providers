{
  "name": "@appliedblockchain/silentdatarollup-providers",
  "description": "Custom providers for Silent Data [Rollup] compatible with ethers.js, fireblocks and Hardhat plugins",
  "author": "@appliedblockchain",
  "homepage": "https://github.com/appliedblockchain/silent-data-rollup-providers#readme",
  "keywords": [
    "ethereum",
    "provider",
    "silentdata",
    "rollup",
    "ethers",
    "fireblocks",
    "hardhat",
    "custom-rpc"
  ],
  "license": "MIT",
  "repository": "https://github.com/appliedblockchain/silent-data-rollup-providers",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "bootstrap": "npm install && npm run build && npm install --prefix ./examples/custom-rpc && npm install --prefix ./examples/ethers-provider-metamask && npm install --prefix ./examples/ethers-provider-nodejs && npm install --prefix ./examples/hardhat-plugin && npm install --prefix ./examples/hardhat-plugin-fireblocks",
    "build": "npm run build -w @appliedblockchain/silentdatarollup-core -w @appliedblockchain/silentdatarollup-custom-rpc -w @appliedblockchain/silentdatarollup-ethers-provider -w @appliedblockchain/silentdatarollup-ethers-provider-fireblocks -w @appliedblockchain/silentdatarollup-hardhat-plugin -w @appliedblockchain/silentdatarollup-hardhat-plugin-fireblocks",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "check-exports": "npm run check-exports -w @appliedblockchain/silentdatarollup-core -w @appliedblockchain/silentdatarollup-custom-rpc -w @appliedblockchain/silentdatarollup-ethers-provider -w @appliedblockchain/silentdatarollup-ethers-provider-fireblocks -w @appliedblockchain/silentdatarollup-hardhat-plugin -w @appliedblockchain/silentdatarollup-hardhat-plugin-fireblocks",
    "check-format": "prettier --check .",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "jest --projects packages/*"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "0.17.4",
    "@changesets/cli": "2.28.1",
    "@eslint/js": "9.22.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.13.10",
    "eslint": "9.22.0",
    "globals": "16.0.0",
    "jest": "29.7.0",
    "prettier": "3.5.3",
    "ts-jest": "29.2.5",
    "tsup": "8.4.0",
    "typescript": "5.6.2",
    "typescript-eslint": "8.26.1"
  },
  "overrides": {
    "cookie": "0.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
